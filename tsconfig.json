{
  "compilerOptions": {
    "target": "es6",                          
    "module": "commonjs",                      
    "outDir": "build",                        
    "rootDir": "src",                         
    "strict": true,                          
    "noImplicitAny": true,                    
    "esModuleInterop": true,                  
    "resolveJsonModule": true,               
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "src/@types",
      "./node_modules/@types"
    ]
  }
}
